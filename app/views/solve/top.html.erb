
<%= form_tag(controller: "solve", action: "top") do%>
    <div class = "form-group">
        <%= text_area_tag("2dlp_text", "ここに入力", {rows:10, class:"form-control"})%>
        <%= submit_tag("計算", class: "btn btn-primary") %>
    </div>
<% end %>


<%counter = 0%>
<% @data_for_plot.zip(@colors_for_plot) do |lines, colors| %>
    <%=counter%>
    <%counter+=1%>
    <%= line_chart(lines, colors:colors, max:50, min:-50, height:"800px", x_title: "xxxxx", y_title: "yyyyyy", library:{pointRadius:0}) %>
    <div class="space"> </div>
<% end %>